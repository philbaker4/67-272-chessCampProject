<div class="card">
  <div class="card-content">
    <h4><%= @family.parent_first_name %> <%= @family.family_name %> </h4><br>

    <b>Phone   </b>  <%= "#{@family.phone}" %><br>
    <b>Email   </b>  <%= "#{@family.email}" %><br>
    <b>Username</b>  <%= "#{@family.username}" %><br>
    <% if @family.active %>
      <b><%= "Active" %></b>
    <% else %>
      <b><%= "Inactive" %></b>
    <% end %><br><br>



    <h5>Students</h5>
    <% if @active_students.empty? and @inactive_students.empty? %>
      <%= "There are no students at this time" %>
    <% else %>
      <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s6"><a  href="#active-students" id = 'index-tabs'>Active Students</a></li>
          <li class="tab col s6"><a href="#inactive-students" id='index-tabs'>Inactive Students</a></li>
        </ul>
      </div>

      <div id="active-students" class="col s12">
        
          <% if @active_students.empty?  %>
            <br>
            There are no active students in the system at this time
          <%else%>
          <table class="striped highlight">
            <thead>
              <th class="align_center">Name</th>
              <th class="align_center">Date of Birth</th>
              <th class="align_center">Rating</th>
              <th class="align_center">Options</th>

            </thead>

            <% for student in @active_students %>
              <tr>
                <td class="align_center"> <%= link_to "#{student.first_name} #{student.last_name}", student_path(student) , class: "links"%></td>
                <td class="align_center"><%= "#{student.date_of_birth.strftime('%m/%d/%y')}" %></td>
                <td class="align_center"><%= "#{student.rating}" %></td>
                <td class="align_center">
                  <%= link_to edit_student_path(student) do %>
                      <i class="material-icons color-icons">edit</i>
                  <% end %> 
                </td>
              </tr>
            <%end%>
           </table>
          <% end -%>

        
        <br>

        <%= will_paginate @active_students, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next"%>
        <br>


      </div>


      <div id="inactive-students" class="col s12">
        
        <% if @inactive_students.empty?  %>
          <br>
          There are no inactive students in the system at this time
        <%else%>
          <table class="striped highlight">
            <thead>
              <th class="align_center">Name</th>
              <th class="align_center">Date of Birth</th>
              <th class="align_center">Rating</th>
              <th class="align_center">Options</th>

            </thead>

            <% for student in @inactive_students %>
              <tr>
                <td class="align_center"> <%= link_to "#{student.first_name} #{student.last_name}", student_path(student) , class: "links"%></td>
                <td class="align_center"><%= "#{student.date_of_birth.strftime('%m/%d/%y')}" %></td>
                <td class="align_center"><%= "#{student.rating}" %></td>
                <td class="align_center">
                  <%= link_to edit_student_path(student) do %>
                      <i class="material-icons color-icons">edit</i>
                  <% end %> 
                </td>
              </tr>
            <%end%>
           
          

          </table>
          <br>
          <%= will_paginate @inactive_students, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next"%>
        <% end -%>

        <br>



      </div>

    </div>


    <%  end %>








  </div>
</div>