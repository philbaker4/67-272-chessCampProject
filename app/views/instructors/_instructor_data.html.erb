<div class="card">
  <div class="card-content">
    <div class = 'row'>
      <div class = 'col s6'>
        <h4><%= "#{@instructor.proper_name}" %> </h4>
  
        <div class = 'row'>
          <b class='col s1'>Email</b>
          <div class = 'col s5 offset-m1'> <%= "#{@instructor.email}"%> </div>
        </div>
        <div class = 'row'>
   
          <b class='col s1'>Phone</b>
          <div class = 'col s5 offset-m1'> <%= "#{@instructor.phone.insert(3,'-').insert(7,'-')}" %> </div>
        </div>
        <div class = 'row'>
    
          <b class='col s1'>Bio</b>
          <div class = 'col s12 offset-m1'> <%= "#{@instructor.bio}" %>. </div>
        </div>


        <%if @instructor.active %>
          <b>Active</b>
        <% else %>
          <b>Inactive</b>
        <% end -%><br><br>

      </div>

      <div class='col s6'>
        <% if !@instructor.photo.nil? %>
          <%= image_tag("#{@instructor.photo}", class: "responsive-img")  %>
        <% end %> 
      </div>

    </div>
    <h5>Upcoming Camps</h5>&nbsp;
    

    <table class="striped highlight">
      <% if @instructor.camps.empty?  %>
        No upcoming camps at this time
      <%else%>
        <thead>
          <th class="align_center">Name</th>
          <th class="align_center">Start</th>
          <th class="align_center">Time</th>
          <th class="align_center">Max Students</th>
        </thead>
        <% for camp in @instructor.camps.chronological %>
          <tr>
            <td class="align_center"><%= link_to "#{camp.name}", camp_path(camp), class: 'links' %></td>
            <td class="align_center"><%= "#{camp.start_date.strftime('%m/%d/%y')}" %></td>
            <% if (camp.time_slot == "am") %>
              <td class="align_center">Morning</td>
            <% else %>
              <td class="align_center">Afternoon</td>
            <% end -%>
            
            <td class="align_center"><%= "#{camp.max_students}" %></td>

          </tr>
        <% end %>
      <% end -%>
    </table>



  


      
  </div>
</div>